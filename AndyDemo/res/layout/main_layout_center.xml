<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/share_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share test"/>
    <Button 
        android:id="@+id/sync_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sync test"/>
    <Button 
        android:id="@+id/simple_view_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="simple view test"/>
    <Button 
        android:id="@+id/fragment_viewpager_tab_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FragmentPager + Tab"/>
    <Button 
        android:id="@+id/local_file_manager_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="local file manager"/>
    <Button 
        android:id="@+id/music_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MusicPlay"/>
    <Button 
        android:id="@+id/pinned_expandable_listview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PinnedExpandableListView"/>
    <Button 
        android:id="@+id/pinned_section_listview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PinnedSectionListView"/>
    

</LinearLayout>