<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RadioGroup 
        android:id="@+id/fragment_tab_rg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center">
        
        <RadioButton 
            android:id="@+id/top_tab1_rbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/fragment_tab_1"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/top_tab_selector_left"
            android:textColor="@drawable/top_tab_text_selector"/>
        
        <RadioButton 
            android:id="@+id/top_tab2_rbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/fragment_tab_2"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/top_tab_selector_center"
            android:textColor="@drawable/top_tab_text_selector"/>
        
        <RadioButton 
            android:id="@+id/top_tab3_rbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/fragment_tab_3"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/top_tab_selector_right"
            android:textColor="@drawable/top_tab_text_selector"/>
        
    </RadioGroup>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_tab_vp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
